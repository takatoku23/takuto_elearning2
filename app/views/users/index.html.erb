<div class="container">
    <h1 class="text-center mb-3">Users</h1>
    <div class="row">
        <% @users.each do |user| %>
            <div class="col-6 users-border">
                <div class="media mb-3 mt-3">
                    <%= gravatar_for(user, "index-gravatar") %>
                    <div class="media-body">
                    <h5 class="pl-2 font-weight-bold"><%= link_to user.name, user %></h5>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <div class="paginate text-center">
        <%= will_paginate%>
    </div>
</div>