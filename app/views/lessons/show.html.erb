<div class="container text-center">
    <h1 class="mt-3"><%= @lesson.category.title%></h1>
    <p>total correct answers are <%= @lesson.lesson_results%> / <%= @lesson.category.words.size%></p>
    <div class="row">
        <div class="col-8 mx-auto">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                    <th scope="col">Word</th>
                    <th scope="col">Your answer</th>
                    <th scope="col">Correct answer</th>
                    <th scope="col">Result</th>
                    </tr>
                </thead>
                <tbody>
                    <% @answers.each do |answer|%>
                        <tr>
                            <td><%= answer.word.content%></td>
                            <td><%= answer.choice.content%></td>
                            <td><%= answer.word.correct_answer%></td>
                            <% if (answer.choice.content == answer.word.correct_answer)%>
                                <td><i class="fa fa-check-circle"></i></td>
                            <% else %>
                                <td><i class="fa fa-times-circle"></i></td>
                            <% end %>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>

</div>