<div class ="container"> 
    <div class="row">
        <div class="col-6 mx-auto">
            <h1 class="text-center mt-3 mb-3">Categories management</h1>
            <div class="new-category text-center">
                <%=link_to "Create new category", new_admin_category_path, 
                class: "btn btn-success mb-3 new-category-btn"%>
            </div>
            <table class="table table-bordered table-dark">
                <thead>
                    <tr>
                        <th class="text-center">Title</th>
                        <th class="text-center">Description</th>
                        <th class="text-center">Edit</th>
                    </tr>
                </thead>
                <% @categories.each do |category| %>
                    <tbody>
                        <tr>
                            <td><%=link_to category.title, admin_category_words_path(category), class: "text-white" %></td>
                            <td><%= category.description %></td>
                            <td> 
                                <%=link_to "Remove", admin_category_path(category),method: :delete, class: "text-white edit-word",
                                data: {confirm: "Are you sure to delete this category?"}%>
                                <p class="slash">/</p>
                                <%=link_to "edit", edit_admin_category_path(category), class: "text-white edit-word"%>
                            </td>
                        </tr>
                    </tbody>
                <% end %>
            </table>
            <%=link_to "back", admin_home_path, class:"back fa fa-arrow-left back-tggle1" %>
            <div class="paginate text-center info">
                <%= will_paginate%>
            </div>
        </div>
    </div>
</div>