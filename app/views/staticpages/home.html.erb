<div class="main-container">
    <div class="signup-conect">
        <h1 class="head text-white text-center">Les's Learn English</h1>
        <% if logged_in?%>
            <div class="btn-container">
                <%= link_to "Home", user_path(current_user), class: "btn-box"%>
            </div>
        <% else %>
            <div class="btn-container">
                <%= link_to "Sign Up", new_user_path, class: "btn-box"%>
            </div>
        <% end %>
    </div>
</div>